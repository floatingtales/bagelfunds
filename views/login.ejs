<%- include('partials/header', {title: 'Login - Bagelfunds!'}) %>
<%- include('partials/navbar') %>

<div class="container-fluid min-vh-100 bg-bagel">
  <div class="row min-vh-100 py-2">
    <div class="col-lg-12 d-flex align-items-center justify-content-center font-override">
      <div class="container text-center bg-secondary rounded-3 text-light bg-opacity-50">
        <h1 class="my-3">Log In!</h1>
        <form action="/login" method="POST">
          <div class="row my-3">
            <label for="username" class="col-form-label col-md-3">Username</label>
            <div class="col-md-9">
              <input type="text" class="form-control" id="username" name="username" placeholder="bageluser001">
            </div>
          </div>
          <div class="row my-3">
            <label for="password" class="col-form-label col-md-3">Password</label>
            <div class="col-md-9">
              <input type="password" class="form-control" id="password" name="password" placeholder="password">
            </div>
          </div>
          <input type="submit" class="btn btn-primary btn-lg my-3" value="Submit" />
        </form>
        <p>Not a member? <a href="/" class="link-light">Sign up now!</a></p>
        <% if (err) { %>
        <div class="alert alert-danger my-3">
          <% if (err === 'no-user') { %>
          No such user found
          <% } else if (err === 'wrong-pwd') { %>
          username and password don't match
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>