{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    // Allow console for students to debug
    "no-console": "off",
    // Disable max length because of db queries
    "max-len": "off",
    // import extensions give off errors
    "import/extensions": "off",
    // needed this for one of the backend helper functions
    "no-await-in-loop": "off"
  }
}
